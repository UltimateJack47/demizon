@page "/Device/Detail/{Id:int}"
@using AutoMapper
@using Demizon.Core.Services.Event
@using Demizon.Mvc.ViewModels

@inject IEventService EventService;
@inject IMapper Mapper;

<MudText>Device detail page of model with name: @Model.Name</MudText>

@code {
    [Parameter]
    public int Id { get; set; }

    private VideoLinkViewModel.Read Model { get; set; } = new();
    
    protected override async Task OnInitializedAsync()
    {
        Model = Mapper.Map<VideoLinkViewModel.Read>(await EventService.GetOneAsync(Id));
    }
}

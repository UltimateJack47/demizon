<MudPaper Elevation="0">
    <MudNavMenu>
        <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">O nás</MudNavLink>
        <MudNavLink Href="@(NavigationManager.BaseUri + "Join-Us")" Icon="@Icons.Material.Filled.PlusOne">Přidej se k nám</MudNavLink>
        <MudNavLink Href="@(NavigationManager.BaseUri + "Events")" Icon="@Icons.Material.Filled.CalendarMonth">Plán vystoupení</MudNavLink>
        <MudNavLink Href="@(NavigationManager.BaseUri + "Dances")" Icon="@Icons.Material.Filled.Celebration">Taneční repertoár</MudNavLink>
        <MudNavLink Href="@(NavigationManager.BaseUri + "Members")" Icon="@Icons.Material.Filled.People">Členové</MudNavLink>
        <MudNavLink Href="@(NavigationManager.BaseUri + "Photos")" Icon="@Icons.Material.Filled.PhotoAlbum">Fotogalerie</MudNavLink>
        <MudNavLink Href="@(NavigationManager.BaseUri + "Videos")" Icon="@Icons.Material.Filled.VideoLibrary">Videa</MudNavLink>
        <MudNavLink Href="@(NavigationManager.BaseUri + "Contact")" Icon="@Icons.Material.Filled.ContactPhone">Kontakt</MudNavLink>
        <MudNavLink Href="@(NavigationManager.BaseUri + "Admin/Events")" Icon="@Icons.Material.Filled.AdminPanelSettings">Admin</MudNavLink>
        <MudNavLink ActiveClass="nonono" Icon="@Icons.Material.Filled.Language">
            <MudButton Size="Size.Small" Color="Color.Default" OnClick="@(() => SetCulture("cs"))">CS</MudButton>
            /
            <MudButton Size="Size.Small" Color="Color.Default" HtmlTag="span" OnClick="@(() => SetCulture("en"))">
                EN
            </MudButton>
        </MudNavLink>
        <AuthorizeView>
            <Authorized>
                <MudNavLink Href="@(NavigationManager.BaseUri + "Logout")" Icon="@Icons.Material.Filled.Logout">Logout</MudNavLink>
            </Authorized>
            <NotAuthorized>
                <MudNavLink Href="@(NavigationManager.BaseUri + "Login")" Icon="@Icons.Material.Filled.Login">Login</MudNavLink>
            </NotAuthorized>
        </AuthorizeView>
    </MudNavMenu>
</MudPaper>

@code {

    private void SetCulture(string culture)
    {
        NavigationManager.NavigateTo(NavigationManager.BaseUri + $"SetLanguage/{culture}", true);
    }

}
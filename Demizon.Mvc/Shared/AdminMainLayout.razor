@inherits LayoutComponentBase

<PageTitle>FS Demižón - Administration</PageTitle>

<MudLayout>
    <MudAppBar Elevation="1" Dense="true" Color="Color.Transparent">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        <MudSpacer/>
    </MudAppBar>
    <MudDrawer @bind-Open="DrawerOpen" Elevation="2" Variant="DrawerVariant.Responsive">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">FS Demižón - Administration</MudText>
        </MudDrawerHeader>
        <AdminNavMenu></AdminNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool DrawerOpen = true;

    void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }

}
